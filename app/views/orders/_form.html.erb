<%= form_with(model: order, local: true) do |form| %>

  <div class="row">

    <% if order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

        <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-md-4">

      <%= form.hidden_field :customer_id, value: params['customer_id'] %>

      <div class="field">
        <%= form.label :employee_id %>
        <%= form.collection_select(:employee_id, Employee.all, :id, :lname, {prompt: true}, {required: true}) %>
      </div>

      <div class="field mt-4">
        <%= form.label :vendor_id %>
        <%= form.collection_select(:vendor_id, Vendor.all, :id, :vendor_name, {prompt: true}, {required: true}) %>
      </div>

    </div>

    <div class="col-md-4">

      <div class="field">
        <%= form.label :payment_type_id %>
        <%= form.collection_select(:payment_type_id, PaymentType.all, :id, :payment_type_description, {prompt: true}, {required: true}) %>
      </div>

      <div class="field">
        <%= form.label :order_line_id %>
        <%= form.collection_select(:order_line_id, OrderLine.all, :id, :item_number, {prompt: true}, {required: true}) %>
      </div>

      <div class="field">
        <%= form.label :order_total %>
        <%= form.text_field :order_total, size: "8", id: :order_order_total, required: true %>
      </div>

      <div class="field">
        <%= form.label :purchase_order_number %>
        <%= form.number_field :purchase_order_number, id: :order_purchase_order_number, required: true %>
      </div>

    </div>

    <div class="col-md-4">

      <div class="field">
        <%= form.label "Shipping Status" %>
        <%= form.collection_select(:order_status_id, OrderStatus.all, :id, :order_status_description, {prompt: true}, {required: true}) %>
      </div>

      <div class="field">
        <%= form.label :shipping_number %>
        <%= form.number_field :shipping_number, :size => '8', id: :order_shipping_number, required: true %>
      </div>

      <div class="field">
        <%= form.label :shipper_id %>
        <%= form.collection_select(:shipper_id, Shipper.all, :id, :shipper_description, {prompt: true}, {required: true}) %>
      </div>

      <div class="field">
        <%= form.label :ship_date %>
        <%= form.date_select :ship_date, id: :order_ship_date, prompt: true, required: true %>
      </div>

      <%= form.hidden_field :country_id, value: params['country_id'] %>

      <%= form.hidden_field :state_id, value: params['state_id'] %>

      <%= form.hidden_field :city, value: params['city'] %>

      <%= form.hidden_field :zip_code, value: params['zip_code'] %>

      <%= form.hidden_field :street_address_1, value: params['street_address_1'] %>

      <%= form.hidden_field :street_address_2, value: params['street_address_2'] %>


    </div>

  </div>

  <div class="actions">
    <%= form.submit :class => 'btn btn-primary btn-sm btn-block mt-4' %>
  </div>

<% end %>
