<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Vendor</th>
      <th>Order status</th>
      <th>Customer</th>
      <th>Country</th>
      <th>Employee</th>
      <th>Payment type</th>
      <th>Ship via</th>
      <th>Order line</th>
      <th>State</th>
      <th>Shippingnumber</th>
      <th>Customername</th>
      <th>Purchaseordernumber</th>
      <th>Orderdate</th>
      <th>Shipondate</th>
      <th>Ordertotal</th>
      <th>Streetaddress1</th>
      <th>Streetaddress2</th>
      <th>City</th>
      <th>Zipcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.vendor %></td>
        <td><%= order.order_status %></td>
        <td><%= order.customer %></td>
        <td><%= order.country %></td>
        <td><%= order.employee %></td>
        <td><%= order.payment_type %></td>
        <td><%= order.ship_via %></td>
        <td><%= order.order_line %></td>
        <td><%= order.state %></td>
        <td><%= order.ShippingNumber %></td>
        <td><%= order.CustomerName %></td>
        <td><%= order.PurchaseOrderNumber %></td>
        <td><%= order.OrderDate %></td>
        <td><%= order.ShipOnDate %></td>
        <td><%= order.OrderTotal %></td>
        <td><%= order.StreetAddress1 %></td>
        <td><%= order.StreetAddress2 %></td>
        <td><%= order.City %></td>
        <td><%= order.Zipcode %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

