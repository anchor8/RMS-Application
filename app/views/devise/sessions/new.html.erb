<!-- Page title -->
<% content_for :title, "Login" %>

<!-- Container -->
<div class="container">

  <!-- App logo -->
  <div class="login_logo pb-5">
    <%= image_tag("appLOGO.png", width: '100px') %>
  </div>

  <!-- Login card -->
  <div class="card card-login mx-auto mt-5 items-centered">

    <!-- Login card header -->
    <div class="card-header">Login</div>

    <!-- Login card content -->
    <div class="card-body">

      <!-- Login form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <!-- Alert -->
        <div class="mt-3 mb-3 mark strong">
          <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
        </div>

        <!-- Email -->
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, size: '30', autofocus: true, autocomplete: "email" %>
        </div>

        <!-- Password -->
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, size: '30', autocomplete: "off" %>
        </div>

        <!-- Remember me -->
        <% if devise_mapping.rememberable? -%>
          <!-- True -->
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <!-- Submit -->
        <div class="actions row">
          <%= f.submit "Log in", :class => 'btn btn-primary btn-sm mx-auto mt-3 mb-3 pl-5 pr-5' %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <!-- Created by -->
    <div class="createdbytag">
      <p>Created By:
      <%= image_tag("anchor8.png", width: '60px') %>
      </p>
    </div>
  </div>
</div>
