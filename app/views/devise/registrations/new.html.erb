<!-- Page Title -->
<% content_for :title, "Create New Employee" %>

<!-- Content Wrapper -->
<div class="content-wrapper">

  <!-- Container (fluid) -->
  <div class="container-fluid">

    <!-- Bread Crumbs -->
    <%= render partial: 'partials/breadcrumbs' %>

    <!-- New employee card -->
    <div class="card">

      <!-- New employee card header -->
      <div class="card-header">
      </div>

      <!-- New employee card content -->
      <div class="card-body">

        <!-- New employee form row -->
        <div class="row">

          <!-- New employee form centered -->
          <div class="mx-auto">

            <!-- Create New Employee Form -->
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <!-- Error Banner -->
              <% if notice %>
              <!-- notice exists -->

                <% flash.each do |key, value| %>
                  <% if value.class == Array %>
                  <!-- Is an array -->

                    <!-- Error message list -->
                    <div class="h5 strong text-center mark" id="flash">
                      <% value.each do |message| %>
                          * <%= message %> *
                          </br>
                      <% end %>
                    </div>
                  <% else %>
                  <!-- Is not an array -->

                    <!-- Error message -->
                    <div class="h5 strong text-center mark" id="flash">
                      * <%= value %> *
                    </div>
                  <% end %>
                <% end %>
              <% end %>

              <!-- Required mark -->
              <div class="mb-3">
                <font color="red">*</font> = Required
              </div>

              <!-- New employee form row -->
              <div class="row">

                <!-- Left column -->
                <div class="col-md-6">
                  <fieldset><legend>Employee Info</legend>

                  <!-- Email -->
                  <div class="field">
                    <b><%= f.label :email %></b> <font color="red">*</font>
                    <%= f.email_field :email, type: 'email', size: "30", autofocus: true, placeholder: "email@provider.com", autocomplete: "email", required: true %>
                  </div>

                  <!-- First Name -->
                  <div class="field mt-1">
                    <b><%= f.label "First Name" %></b>  <font color="red">*</font> <br />
                    <%= f.text_field :fname, size: "20", placeholder: "John", autocomplete: "first name", required: true %>
                  </div>

                  <!-- Last name -->
                  <div class="field mt-1">
                    <b><%= f.label "Last Name" %></b>  <font color="red">*</font> <br />
                    <%= f.text_field :lname, size: "20", placeholder: "Smith", autocomplete: "last name", required: true %>
                  </div>

                  <!-- Phone -->
                  <div class="field mt-1">
                    <b><%= f.label :phone %></b>  <font color="red">*</font> <br />
                    <%= f.text_field :phone, type: 'tel', placeholder: "+1-123-123-1234", size: "15", autocomplete: "phone number", required: true %>
                  </div>
                  </fieldset>
                </div>

                <!-- Right column -->
                <div class="col-md-6">
                  <fieldset><legend>Passwords</legend>

                  <!-- Password -->
                  <div class="field">
                    <b><%= f.label :password %></b>  <font color="red">*</font>
                    <% if @minimum_password_length %>
                      <!-- Not minimum length -->
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, placeholder: "1 lower, 1 upper, 1 digit, 1 symbol", size: "30",autocomplete: "off", required: true %>
                  </div>

                  <!-- Password Confirmation -->
                  <div class="field mt-4">
                    <b><%= f.label :password_confirmation %></b> <font color="red">*</font> <br />
                    <%= f.password_field :password_confirmation, placeholder: "Must match", size: "30",autocomplete: "off", required: true %>
                  </div>
                  </fieldset>
                </div>
              </div>

              <%= f.hidden_field :employee_status_id, value: 2 %>

              <!-- Submit centered -->
              <div class="actions row">
                <%= f.submit "Add New Employee", :class => 'btn btn-primary btn-block btn-sm mt-4' %>
              </div>
              <% end %>
          </div>
        </div>
      </div>

      <!-- New employee card footer -->
      <div class="card-footer">
      </div>
    </div>
  </div>
</div>
