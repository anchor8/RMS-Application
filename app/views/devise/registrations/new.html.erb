<div class="container">
  <div class="card card-login mx-auto">
    <div class="card-body">

      <div class="mt-3 mb-3">
        * = Required
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= devise_error_messages! %>

      <div class="field">
        <b><%= f.label :email %>
          *
        </b><br/>
        <%= f.email_field :email, type: 'email', size: "30", autofocus: true, placeholder: "email@provider.com", autocomplete: "email", required: true %>
      </div>

      <div class="field">
        <b><%= f.label :fname %>
          *
        </b><br/>
        <%= f.text_field :fname, size: "20", placeholder: "John", autocomplete: "first name", required: true %>
      </div>

      <div class="field">
        <b><%= f.label :lname %>
          *</b><br/>
        <%= f.text_field :lname, size: "20", placeholder: "Smith", autocomplete: "last name", required: true %>
      </div>

      <div class="field">
        <b><%= f.label :phone %>
          *
        </b><br/>
        <%= f.text_field :phone, type: 'tel', placeholder: "+1-123-123-1234", size: "15", autocomplete: "phone number", required: true %>
      </div>

      <div class="field">
        <b><%= f.label :password %>
          *
        </b>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>
            characters minimum)</em>
        <% end %><br/>
        <%= f.password_field :password, placeholder: "1 lower, 1 upper, 1 digit, 1 symbol", size: "30",autocomplete: "off", required: true %>
      </div>

      <div class="field">
        <b><%= f.label :password_confirmation %>
          *
        </b><br/>
        <%= f.password_field :password_confirmation, placeholder: "Must match", size: "30",autocomplete: "off", required: true %>
      </div>

      <%= f.hidden_field :employee_status_id, value: 2 %>

      <div class="actions row">
        <%= f.submit "Add New Employee", :class => 'btn btn-primary btn-sm mx-auto mt-2 pl-4 pr-4' %>
      </div>
    <% end %>
  </div>
</div>
</div>