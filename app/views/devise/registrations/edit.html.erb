<div class="container">
  <div class="card card-login mx-auto">
    <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <b><%= f.label :email %></b><br />
            <%= f.email_field :email, size: "37", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <b><%= f.label :phone %></b><br />
            <%= f.text_field :phone, size: "10", autofocus: true, autocomplete: "phone number" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field mt-3">
            <b><%= f.label :password %></b> <br /><i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, size: "37", autocomplete: "off" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field mt-3">
            <b><%= f.label :password_confirmation %></b><br />
            <%= f.password_field :password_confirmation, size: "37",autocomplete: "off" %>
          </div>

          <div class="field mt-3">
            <b><%= f.label :current_password %></b> <br /><i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, size: "37",autocomplete: "off" %>
          </div>

          <div class="actions row">
            <%= f.submit "Update", :class => 'btn btn-primary btn-sm mx-auto mt-3 pl-4 pr-4' %>
          </div>
        <% end %>
    </div>
  </div>
</div>
