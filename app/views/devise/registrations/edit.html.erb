<div class="card">
  <div class="card-header">

  </div>
  <div class="card-body">
    <div class="row">

      <div class="mx-auto">

        <div class="mb-3">
          <font color="red">*</font> = Required
        </div>

        <div class="row">

          <div class="col-md-6">
            <fieldset><legend>Employee Info</legend>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>

              <div class="field">
                <b><%= f.label :email %></b> <font color="red">*</font> <br />
                <%= f.email_field :email, type: 'email', value: current_employee.email, size: "37", placeholder: current_employee.email, autocomplete: "Email", required: true %>
              </div>

              <div class="field mt-1">
                <b><%= f.label "First Name" %></b>  <font color="red">*</font> <br />
                <%= f.text_field :fname, value: current_employee.fname, size: "30", placeholder: current_employee.fname, autocomplete: "First Name", required: true %>
              </div>

              <div class="field mt-1">
                <b><%= f.label "Last Name" %></b> <font color="red">*</font> <br />
                <%= f.text_field :lname, value: current_employee.lname, size: "30", placeholder: current_employee.lname, autocomplete: "Last Name", required: true %>
              </div>

              <div class="field mt-1">
                <b><%= f.label :phone %></b>  <font color="red">*</font> <br />
                <%= f.text_field :phone, type: 'tel', size: "12", value: current_employee.phone, placeholder: current_employee.phone, autocomplete: "Phone Number", required: true %>
              </div>
                  </fieldset>
          </div>

          <div class="col-md-6">
              <fieldset><legend>Passwords</legend>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

                <div class="field mx-auto  mt-3">
                  <b><%= f.label :current_password %></b> <font color="red">*</font>  <br /><i>(We need your current password to confirm your changes)</i><br />
                  <%= f.password_field :current_password, size: "40", placeholder: "Current Password", autocomplete: "off", required: true %>
                </div>

              <div class="field mt-3">
                <b><%= f.label "New Password" %></b> <br /><i>(Leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, placeholder: "1 Lower, 1 Upper, 1 Digit, 1 Symbol", size: "40", autocomplete: "off" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>

              <div class="field mt-3">
                <b><%= f.label "New Password Confirmation" %></b><br />
                <%= f.password_field :password_confirmation, placeholder: "Must Match", size: "40",autocomplete: "off" %>
              </div>
            </fieldset>
          </div>

        </div>


              <div class="actions row">

                <%= f.submit "Update Current Employee", :class => 'btn btn-primary btn-sm mx-auto mt-3 mb-5 pl-4 pr-4' %>

              </div>

            <% end %>

      </div>
    </div>

  </div>
  <div class="card-footer">

  </div>
</div>
