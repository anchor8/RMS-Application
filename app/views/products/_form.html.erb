<!-- Product form -->
<%= form_with(model: product, local: true) do |form| %>

  <!-- Notice Banner -->
  <% if notice %>
    <div class='h5 strong text-center mark'>
      <%= flash[:notice] %>
    </div>
  <% end %>

    <!-- Required Mark -->
    <div class="mb-3" align="center">
      <font color="red">*</font> = Required
    </div>


    <!-- Product field row -->
    <div class="row justify-content-md-center form-group">
      <div class="col-md-auto">
        <fieldset><legend>Product Info</legend>
        <!-- Product name -->
        <div class="field col-12">
          <%= form.label "Product name: " %><font color="red">*</font> <br />
          <%= form.text_field :product_name, value: @product.product_name, placeholder: "Product Name", id: :product_product_name, required: true, class: 'form-control' %>
        </div>

        <!-- Price -->
        <div class="field col-md-8">
          <%= form.label "Price: " %> <font color="red">*</font><br />
          <%= form.text_field :price, value: @product.price, placeholder: '$10.00', size: 20, id: :product_price, required: true, class: 'form-control' %>
        </div>
            </fieldset>

        <!-- Submit -->
        <div class="actions" align="center">
          <%= form.submit class: "btn btn-primary btn-sm ml-4"%>
        </div>
      </div>
  </div>
<% end %>
