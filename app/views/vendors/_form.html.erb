<div class="card">
  <div class="card-header">

  </div>
  <div class="card-body">
    <div class="row">
      <div class="mx-auto">
        <!-- Vendor form -->
        <%= form_with(model: vendor, local: true) do |form| %>

          <!-- Error Banner -->
          <% if vendor.errors.any? %>
            <div class="h5 strong text-center mark">
              <% vendor.errors.full_messages.each do |message| %>
                * <%= message %> *
                <br />
              <% end %>
            </div>
          <% end %>

          <!-- Required Mark -->
          <div class="mt-3 mb-3">
            <font color="red">*</font> = Required
          </div>

          <!-- Row -->
          <div class="row">

            <!-- Left Column -->
            <div class="col-md-6">

              <div class="field">
                <b><%= form.label :vendor_name %></b> <font color="red">*</font>
                <%= form.text_field :vendor_name, :size => '20', placeholder: 'Vendor Name', id: :vendor_vendor_name %>
              </div>

              <div class="field mt-1">
                <b><%= form.label :contact_name %></b> <font color="red">*</font>
                <%= form.text_field :contact_name, :size => '20', placeholder: 'John Smith', id: :vendor_contact_name %>
              </div>

              <div class="field mt-1">
                <b><%= form.label :job_title %></b> <font color="red">*</font>
                <%= form.text_field :job_title, :size => '20', placeholder: 'Products Manager', id: :vendor_job_title %>
              </div>

              <div class="field mt-1">
                <b><%= form.label :website %></b>
                <%= form.text_field :website, :size => '25', placeholder: 'www.website.com', id: :vendor_website %>
              </div>

              <div class="field mt-4">
                <b><%= form.label :vendor_status_id %></b> <font color="red">*</font>
                <%= form.collection_select :vendor_status_id, VendorStatus.all, :id, :vendor_status_type, prompt: true %>
              </div>

              <div class="field mt-4">
                <b><%= form.label :vendor_email %></b> <font color="red">*</font>
                <%= form.text_field :vendor_email, type: 'email', :size => '25', placeholder: 'email@provider.com', id: :vendor_vendor_email %>
              </div>

              <div class="field mt-1">
                <b><%= form.label :vendor_cc_email %></b>
                <%= form.text_field :vendor_cc_email, type: 'email', :size => '25', placeholder: 'email@provider.com', id: :vendor_vendor_cc_email %>
              </div>

              <div class="field mt-1">
                <b><%= form.label :work_phone %></b> <font color="red">*</font>
                <%= form.text_field :work_phone, type: 'tel', :size => '15', placeholder: '+1-123-123-1234', id: :vendor_work_phone %>
              </div>

              <div class="field mt-1">
                <b><%= form.label :mobile %></b>
                <%= form.text_field :mobile, type: 'tel', :size => '15', placeholder: '+1-123-123-1234', id: :vendor_mobile %>
              </div>

              <div class="field mt-1">
                <b><%= form.label :fax %></b>
                <%= form.text_field :fax, type: 'tel', :size => '15', placeholder: '+1-123-123-1234', id: :vendor_fax %>
              </div>

            </div>

            <!-- Right Column -->
            <div class="col-md-6">

              <div class="field">
                <b><%= form.label :street_address_1 %></b> <font color="red">*</font>
                <%= form.text_field :street_address_1, :size => '30', placeholder: '123 Street Address Rd. Bldg. 123', id: :vendor_street_address_1 %>
              </div>

              <div class="field mt-1">
                <b><%= form.label :street_address_2 %></b>
                <%= form.text_field :street_address_2, :size => '30', placeholder: '123 Street Address Rd. Bldg. 123', id: :vendor_street_address_2 %>
              </div>

              <div class="field mt-1">
                <b><%= form.label :state_id %></b> <font color="red">*</font>
                <%= form.collection_select :state_id, State.order(:state_name), :id, :state_name, prompt: true %>
              </div>

              <div class="field mt-1">
                <b><%= form.label :city %></b> <font color="red">*</font>
                <%= form.text_field :city, :size => '20', placeholder: 'Houston', id: :vendor_city %>
              </div>

              <div class="field mt-1">
                <b><%= form.label :zip_code %></b> <font color="red">*</font>
                <%= form.text_field :zip_code, :size => '10', placeholder: '77777-8888', id: :vendor_zip_code %>
              </div>

            </div>

          </div>

          <!-- Submit -->
          <div class="actions">
            <%= form.submit :class => 'btn btn-primary btn-sm btn-block mt-4' %>
          </div>

        <% end %>

      </div>
    </div>

  </div>
  <div class="card-footer">

  </div>
</div>
