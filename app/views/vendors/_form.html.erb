<!-- Vendor form card -->
<div class="card">

  <!-- Vendor form card header -->
  <div class="card-header">
  </div>

  <!-- Vendor form card content -->
  <div class="card-body">

    <!-- Vendor form row -->
    <div class="row">

      <!-- Vendor form centered -->
      <div class="mx-auto">

        <!-- Vendor form -->
        <%= form_with(model: vendor, local: true) do |form| %>

          <!-- Error Banner -->
          <% if vendor.errors.any? %>
            <div class="h5 strong text-center mark">
              <% vendor.errors.full_messages.each do |message| %>
                * <%= message %> *
                <br />
              <% end %>
            </div>
          <% end %>

          <!-- Required Mark -->
          <div class="mb-3">
            <font color="red">*</font> = Required
          </div>

          <!-- Row -->
          <div class="row form-group">

            <!-- Vendor Info -->
            <div class="col-md-auto">
              <fieldset><legend>Vendor Info</legend>
              <!-- Vendor name -->
              <div class="field col-md-12">
                <b><%= form.label :vendor_name %></b> <font color="red">*</font><br />
                <%= form.text_field :vendor_name, :size => '20', placeholder: 'Vendor Name', id: :vendor_vendor_name, class: 'form-control' %>
              </div>

              <!-- Contact name -->
              <div class="field mt-1 col-md-12">
                <b><%= form.label :contact_name %></b> <font color="red">*</font><br />
                <%= form.text_field :contact_name, :size => '20', placeholder: 'John Smith', id: :vendor_contact_name, class: 'form-control' %>
              </div>

              <!-- Job title -->
              <div class="field mt-1 col-md-12">
                <b><%= form.label :job_title %></b> <font color="red">*</font><br />
                <%= form.text_field :job_title, :size => '20', placeholder: 'Products Manager', id: :vendor_job_title, class: 'form-control' %>
              </div>

              <!-- Website -->
              <div class="field mt-1 col-md-12">
                <b><%= form.label :website %></b><br />
                <%= form.text_field :website, :size => '25', placeholder: 'www.website.com', id: :vendor_website, class: 'form-control' %>
              </div>

              <!-- Vendor status -->
              <div class="field mt-2 col-md-8">
                <b><%= form.label :vendor_status_id %></b> <font color="red">*</font><br />
                <%= form.collection_select(:vendor_status_id, VendorStatus.all, :id, :vendor_status_type, {prompt: true}, {class: 'form-control'}) %>
              </div>
              </fieldset>
            </div>


            <!-- Vendor Contact -->
            <div class="col-md-auto">
              <fieldset><legend>Vendor Contact</legend>

              <div class="field mt-auto col-md-12">
                <b><%= form.label :vendor_email %></b> <font color="red">*</font><br />
                <%= form.text_field :vendor_email, type: 'email', :size => '25', placeholder: 'email@provider.com', id: :vendor_vendor_email, class: 'form-control' %>
              </div>

              <!-- Vendor cc email -->
              <div class="field mt-1 col-md-12">
                <b><%= form.label :vendor_cc_email %></b><br />
                <%= form.text_field :vendor_cc_email, type: 'email', :size => '25', placeholder: 'email@provider.com', id: :vendor_vendor_cc_email, class: 'form-control' %>
              </div>

              <!-- Work phone -->
              <div class="field mt-1 col-md-8">
                <b><%= form.label :work_phone %></b> <font color="red">*</font><br />
                <%= form.text_field :work_phone, type: 'tel', :size => '15', placeholder: '+1-123-123-1234', id: :vendor_work_phone, class: 'form-control' %>
              </div>

              <!-- Mobile -->
              <div class="field mt-1 col-md-8">
                <b><%= form.label :mobile %></b><br />
                <%= form.text_field :mobile, type: 'tel', :size => '15', placeholder: '+1-123-123-1234', id: :vendor_mobile, class: 'form-control' %>
              </div>

              <!-- Fax -->
              <div class="field mt-1 col-md-8">
                <b><%= form.label :fax %></b><br />
                <%= form.text_field :fax, type: 'tel', :size => '15', placeholder: '+1-123-123-1234', id: :vendor_fax, class: 'form-control' %>
              </div>
              </fieldset>
            </div>

            <!--  Vendor Address -->
            <div class="col-md-auto">
              <fieldset><legend>Vendor Address</legend>
              <!-- Street Address 1 -->
              <div class="field col-md-12">
                <b><%= form.label :street_address_1 %></b> <font color="red">*</font><br />
                <%= form.text_field :street_address_1, :size => '30', placeholder: '123 Street Address', id: :vendor_street_address_1, class: 'form-control' %>
              </div>

              <!-- Street Address 2 -->
              <div class="field mt-1 col-md-12">
                <b><%= form.label :street_address_2 %></b><br />
                <%= form.text_field :street_address_2, :size => '30', placeholder: 'Bldg. 123', id: :vendor_street_address_2, class: 'form-control' %>
              </div>

              <!-- State -->
              <div class="field mt-1 col-md-8">
                <b><%= form.label :state_id %></b> <font color="red">*</font><br />
                <%= form.collection_select(:state_id, State.order(:state_name), :id, :state_name, {prompt: true}, {class: 'form-control'}) %>
              </div>

              <!-- City -->
              <div class="field mt-1 col-md-6">
                <b><%= form.label :city %></b> <font color="red">*</font><br />
                <%= form.text_field :city, :size => '20', placeholder: 'Houston', id: :vendor_city, class: 'form-control' %>
              </div>

              <!-- Zip code -->
              <div class="field mt-1 col-md-5">
                <b><%= form.label :zip_code %></b> <font color="red">*</font><br />
                <%= form.text_field :zip_code, :size => '10', placeholder: '77777-8888', id: :vendor_zip_code, class: 'form-control' %>
              </div>
              </fieldset>
            </div>
          </div>

          <!-- Submit -->
          <div class="actions">
            <%= form.submit :class => 'btn btn-primary btn-sm btn-block mt-4' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Vendor card footer -->
  <div class="card-footer">

  </div>
</div>
