<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">

    <div class="col-md-6">

      <div class="field">
        <%= form.label :customer_first_name %>
        <%= form.text_field :customer_first_name, :size => '5', id: :customer_customer_first_name %>
      </div>

      <div class="field">
        <%= form.label :customer_last_name %>
        <%= form.text_field :customer_last_name, :size => '5', id: :customer_customer_last_name %>
      </div>

      <div class="field">
        <%= form.label :customer_email %>
        <%= form.text_field :customer_email, :size => '18', id: :customer_customer_email %>
      </div>

      <div class="field">
        <%= form.label :customer_cc_email %>
        <%= form.text_field :customer_cc_email, :size => '18', id: :customer_customer_cc_email %>
      </div>

      <div class="field">
        <%= form.label :mobile %>
        <%= form.text_field :mobile, :size => '10', id: :customer_mobile %>
      </div>

      <div class="field">
        <%= form.label :street_address_1 %>
        <%= form.text_field :street_address_1, :size => '28', id: :customer_street_address_1 %>
      </div>

      <div class="field">
        <%= form.label :street_address_2 %>
        <%= form.text_field :street_address_2, :size => '28', id: :customer_street_address_2 %>
      </div>

      <div class="field">
        <%= form.label :social_media_address %>
        <%= form.text_field :social_media_address, :size => '18', id: :customer_social_media_address %>
      </div>

    </div>

    <div class="col-md-6">

      <div class="field">
        <%= form.label :company_name %>
        <%= form.text_field :company_name, :size => '12', id: :customer_company_name %>
      </div>

      <div class="field">
        <%= form.label :job_title %>
        <%= form.text_field :job_title, :size => '14', id: :customer_job_title %>
      </div>

      <div class="field">
        <%= form.label :state_id %>
        <%= form.collection_select :state_id, State.all, :id, :state_name %>
      </div>

      <div class="field">
        <%= form.label :city %>
        <%= form.text_field :city, :size => '8', id: :customer_city %>
      </div>

      <div class="field">
        <%= form.label :zip_code %>
        <%= form.text_field :zip_code, :size => '2', id: :customer_zip_code %>
      </div>

      <div class="field">
        <%= form.label :work_phone %>
        <%= form.text_field :work_phone, :size => '10', id: :customer_work_phone %>
      </div>

      <div class="field">
        <%= form.label :website %>
        <%= form.text_field :website, :size => '18', id: :customer_website %>
      </div>

      <div class="field">
        <%= form.label :fax %>
        <%= form.text_field :fax, :size => '18', id: :customer_fax %>
      </div>

    </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
