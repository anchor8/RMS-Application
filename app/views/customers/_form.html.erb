<%= form_with(model: customer, local: true) do |form| %>

  <div class="row ml-5">

    <% if customer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

        <ul>
        <% customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-md-6">

      <div class="field">
        <%= form.label :First_Name  %>
        <%= form.text_field :customer_first_name, :size => '15', required: true, placeholder: 'Required', id: :customer_customer_first_name %>
      </div>

      <div class="field">
        <%= form.label :Last_Name  %>
        <%= form.text_field :customer_last_name, :size => '15', required: true, placeholder: 'Required', id: :customer_customer_last_name %>
      </div>

      <div class="field">
        <%= form.label :Email  %>
        <%= form.text_field :customer_email, :size => '20', type: 'email', required: true, placeholder: 'Required', id: :customer_customer_email %>
      </div>

      <div class="field">
        <%= form.label :CC_email %>
        <%= form.text_field :customer_cc_email, :size => '20', type: 'email', id: :customer_customer_cc_email %>
      </div>

      <div class="field">
        <%= form.label :mobile %>
        <%= form.text_field :mobile, :size => '11', type: 'tel', id: :customer_mobile %>
      </div>

      <div class="field">
        <%= form.label :street_address_1 %>
        <%= form.text_field :street_address_1, :size => '30', Required: true, placeholder: 'Required', id: :customer_street_address_1 %>
      </div>

      <div class="field">
        <%= form.label :street_address_2 %>
        <%= form.text_field :street_address_2, :size => '30', id: :customer_street_address_2 %>
      </div>

      <div class="field">
        <%= form.label :social_media_address %>
        <%= form.text_field :social_media_address, :size => '20', id: :customer_social_media_address %>
      </div>

    </div>

    <div class="col-md-6">

      <div class="field">
        <%= form.label :company_name %>
        <%= form.text_field :company_name, :size => '25', id: :customer_company_name %>
      </div>

      <div class="field">
        <%= form.label :job_title %>
        <%= form.text_field :job_title, :size => '15', id: :customer_job_title %>
      </div>

      <div class="field">
        <%= form.label :state_id %>
        <%= form.collection_select :state_id, State.all, :id, :state_name, prompt: true %>
      </div>

      <div class="field">
        <%= form.label :city %>
        <%= form.text_field :city, :size => '20', Required: true, placeholder: 'Required', id: :customer_city %>
      </div>

      <div class="field">
        <%= form.label :zip_code %>
        <%= form.text_field :zip_code, :size => '8', required: true, placeholder: 'Required', id: :customer_zip_code %>
      </div>

      <div class="field">
        <%= form.label :work_phone %>
        <%= form.text_field :work_phone, :size => '11', type: 'tel', Required: true, placeholder: 'Required', id: :customer_work_phone %>
      </div>

      <div class="field">
        <%= form.label :website %>
        <%= form.text_field :website, :size => '30', id: :customer_website %>
      </div>

      <div class="field">
        <%= form.label :fax %>
        <%= form.text_field :fax, :size => '11', id: :customer_fax %>
      </div>

    </div>

  </div>

  <div class="actions">
    <%= form.submit :class => 'btn btn-primary btn-block btn-sm mt-4' %>
  </div>

<% end %>
