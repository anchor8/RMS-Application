<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>State</th>
      <th>Companyname</th>
      <th>Customerfirstname</th>
      <th>Customerlastname</th>
      <th>Jobtitle</th>
      <th>Workphone</th>
      <th>Mobile</th>
      <th>Fax</th>
      <th>Customeremail</th>
      <th>Ccemail</th>
      <th>Website</th>
      <th>Socialmediaaddress</th>
      <th>Streetaddress1</th>
      <th>Streetaddress2</th>
      <th>City</th>
      <th>Zipcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.state %></td>
        <td><%= customer.CompanyName %></td>
        <td><%= customer.CustomerFirstName %></td>
        <td><%= customer.CustomerLastName %></td>
        <td><%= customer.JobTitle %></td>
        <td><%= customer.WorkPhone %></td>
        <td><%= customer.Mobile %></td>
        <td><%= customer.Fax %></td>
        <td><%= customer.CustomerEmail %></td>
        <td><%= customer.CCEmail %></td>
        <td><%= customer.Website %></td>
        <td><%= customer.SocialMediaAddress %></td>
        <td><%= customer.StreetAddress1 %></td>
        <td><%= customer.StreetAddress2 %></td>
        <td><%= customer.City %></td>
        <td><%= customer.Zipcode %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

