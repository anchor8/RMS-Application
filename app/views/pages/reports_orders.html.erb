<% content_for :title, "Reports - Orders" %>

<!-- Content Wrapper -->
<div class="content-wrapper">

  <!-- Container (Fluid) -->
  <div class="container-fluid">

    <!-- Breadcrumbs-->
    <%= render partial: 'partials/breadcrumbs' %>

    <!-- Report Tabs -->
    <ul class="nav nav-tabs">

      <!-- Report 1 - Orders -->
      <li class="nav-item">

        <!-- If active_tab is report1, activate -->
        <% if params[:active_tab] == 'report1' %>
          <a class="nav-link active" aria-controls="report1" role="tab" data-toggle="tab" href="#report1">Orders</a>

        <!-- If active_tab is empty, activate-->
        <% elsif !params[:active_tab] %>
          <a class="nav-link active" aria-controls="report1" role="tab" data-toggle="tab" href="#report1">Orders</a>

        <!-- If active_tab is not report1 or empty, dont activate -->
        <% else %>
          <a class="nav-link" aria-controls="report1" role="tab" data-toggle="tab" href="#report1">Orders</a>

        <% end %>
      </li>

    </ul>

    <!-- Content in Tab -->
    <div class="tab-content">

      <%= render partial: 'partials/reports/order-reports' %>

    </div>

  </div>

</div>
